@using Camposur.Model.ViewModel
@model ForgotPasswordViewModel

@{
    ViewBag.Title = "Olvidaste tu Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h4>Olvidaste tu Contraseña</h4>
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <span>Un email sera enviado a tu correo con instrucciones.</span>
                    </div>
                </div>
                <div class="row div-margin-top">
                    <div class="col-md-4 ">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row div-margin-top">
                    <div class="col-md-12 text-right">
                        @Html.ActionLink("Cancelar", "Login", null, new { @class = "btn btn-danger" })
                        <input type="submit" class="btn btn-default" value="Aceptar" />
                    </div>
                </div>
                <div class="row div-margin-top">
                    <div class="col-md-12">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
