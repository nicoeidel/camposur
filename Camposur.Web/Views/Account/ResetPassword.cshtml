@using Camposur.Model.ViewModel
@model ResetPasswordViewModel

@{
    ViewBag.Title = "Resetear Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.HiddenFor(m => m.Code);
        @Html.HiddenFor(m => m.UserId);

        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h4>Resetear Contraseña</h4>
                        <hr />
                    </div>
                </div>
                <div class="row div-margin-top">
                    <div class="col-md-4 ">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    </div>
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row div-margin-top">
                    <div class="col-md-4 ">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                    </div>
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row div-margin-top">
                    <div class="col-md-12 text-right">
                        @Html.ActionLink("Cancelar", "Login", null, new { @class = "btn btn-danger" })
                        <input type="submit" class="btn btn-default" value="Resetear" />
                    </div>
                </div>
                <div class="row div-margin-top">
                    <div class="col-md-12">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
